{% extends 'layout.njk' %}

{% block content%}

{% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> {{curse.title}}</title>
{% endblock %}

    <div id="wrapper" class="video">
        <h1>{{curse.title}}</h1>
    </div>

    <section class="video">
        
        <div class="card" id=" {{curse.id}} ">
            <div class="card__video-container">
                <iframe src="https://www.youtube.com/embed/{{curse.id}}" frameborder="0"></iframe>
            </div>
            <div class="card__content">
                <p>{{curse.title}}</p>
            </div>
            <div class="card__info">
                <p>{{curse.subtitle}}</p>
                <p class="card__price"><a href="{{social}}" target="_blank">{{curse.link}}</a></p>
            </div>
        </div>
        

    </section>
    


    {% endblock %}